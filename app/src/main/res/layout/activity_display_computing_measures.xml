<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DisplayMeasuresResult"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context="com.example.tomas.speechprocessingapp.DisplayComputingMeasures">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/barra"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dcm_resultsTitle"
        android:text="Results"
        android:textSize="@dimen/textResultsTitle"
        android:textAppearance="@android:color/black"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/margin_small"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/barra"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dcm_resultPrinting"
        android:text="Results"

        android:textSize="@dimen/textResults"
        android:textAppearance="@color/colorPrimary"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/barra"/>



</LinearLayout>


</LinearLayout>
